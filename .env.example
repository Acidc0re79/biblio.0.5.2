// Archivo NUEVO: /.env.example
// (Crea este archivo en la raíz de tu proyecto)

# ---------------------------------------------------
# CONFIGURACIÓN DE LA BASE DE DATOS
# ---------------------------------------------------
DB_HOST="db_host"
DB_NAME="nombre_de_tu_base_de_datos"
DB_USER="tu_usuario_de_bd"
DB_PASS="tu_contraseña_de_bd"
DB_CHARSET="utf8mb4"

# ---------------------------------------------------
# CONFIGURACIÓN DE GOOGLE OAUTH
# ---------------------------------------------------
GOOGLE_CLIENT_ID="aqui_tu_client_id_de_google"
GOOGLE_CLIENT_SECRET="aqui_tu_client_secret_de_google"
GOOGLE_REDIRECT_URI="aqui_tu_uri_de_proyecto"

# ---------------------------------------------------
# CLAVES DE APIS EXTERNAS
# ---------------------------------------------------
# Puedes añadir más claves separadas por comas. El sistema las rotará.
GEMINI_API_KEYS="tu_key_gemini_1,tu_key_gemini_2"
HUGGINGFACE_API_KEY="tu_key_huggingface"

# ---------------------------------------------------
# PEPPER DE SEGURIDAD
# ---------------------------------------------------
# Este valor DEBE ser una cadena aleatoria larga y ÚNICA para tu aplicación.
# Puedes generarla en https://www.lastpass.com/features/password-generator
APP_PEPPER="CAMBIAME_POR_UNA_CADENA_ALEATORIA_MUY_LARGA_Y_SEGURA"